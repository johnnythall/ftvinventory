<%- model_class = Category -%>
<div class="page-header">
  <h1><%=t '.title', :default => @category.name.pluralize.titleize %></h1>


<dl class="dl-horizontal">


</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:asset_id) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
	  <th><%= model_class.human_attribute_name(:permission_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
	  <th><%= model_class.human_attribute_name(:available)%></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% Asset.specific_category(@category).each do |asset| %>
      <tr>
        <td><%= link_to asset.id, asset_path(asset) %></td>
        <td><%= asset.name %></td>
        <td><%= asset.asset_id %></td>
        <td><%= asset.category.name %></td>
		<td><%= asset.permission.name %></td>
        <td><%= asset.location.name %></td>
		<td><%= asset.available%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_asset_path(asset), :class => 'btn btn-default btn-xs' %>
          <!--<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      asset_path(asset),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_asset_path,
            :class => 'btn btn-primary' %>